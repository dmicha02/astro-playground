---
import '../styles/global.css';
import ParticlesBG from '../components/ParticlesBG.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
import Menu from '../components/Menu.astro';
import Footer from '../components/Footer.astro';
import WTF from '../components/WTF.astro';

---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/dm.svg" />
		<link rel="canonical" href="https://dopro.info/" />
		<met name="og:image" content="/dm.svg" />
		<meta name="og:title" content="Dorian Michaud : portfolio" />
		<meta name="og:description" content="Portfolio de Dorian Michaud, tech leader, docteur en traitement du signal et en informatique, et passionné par la tech, le cloud, le devops et la cybersécurité" />
		<meta name="og:url" content="https://dopro.info/" />
		<meta name="og:type" content="website" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Portfolio de Dorian Michaud, tech leader, docteur en traitement du signal et en informatique, et passionné par la tech, le cloud, le devops et la cybersécurité" />
		<meta name="author" content="Dorian Michaud" />
		<meta name="keywords" content="Dorian Michaud, Dorian, Michaud, tech, devops, cto, portfolio, CV, tech leader, docteur, DevOps, cybersécurité, cloud" />
		<title>Dorian Michaud : portfolio</title>
	</head>
	<body class="flex flex-col min-h-screen">
		
    <ThemeSwitcher/>
		
		<div class="h-full w-full flex items-center justify-center">
			
		<div class="hero min-h-screen flex flex-col m-auto">
			<Menu/>
	  		<ParticlesBG is_dark={true}/>
			  <WTF/>
				  
			<slot/>
			
		</div>
		</div>
		
		<Footer/>
		<div class="progress bg-base-content"></div>
	</body>
</html>

<style>
	html{
		scroll-behavior: smooth;
		md:scroll-auto
	},
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.progress {
        position: fixed;
        left: 0;
        right: 0;
        height: 7px;
        /* background: #2f9D; */
		/* background: var(--color-base-content); */
        bottom: 0px;
        transform: scaleX(0);
    }
</style>

<script>
import { animate, scroll } from "motion";

scroll(animate(".progress", { scaleX: [0, 1] }), {
	target: document.querySelector("body") || undefined,
})
</script>