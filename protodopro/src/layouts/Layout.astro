---
import '../styles/global.css';
import ParticlesBG from '../components/ParticlesBG.astro';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';
import Menu from '../components/Menu.astro';
import Footer from '../components/Footer.astro';
import WTF from '../components/WTF.astro';

---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/dm.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Dorian Michaud : portfolio</title>
	</head>
	<body class="flex flex-col min-h-screen">
		
    <ThemeSwitcher/>
		
		<div class="h-full w-full flex items-center justify-center">
			
		<div class="hero min-h-screen flex flex-col m-auto">
			<Menu/>
	  		<ParticlesBG is_dark={true}/>
			  <WTF/>
				  
			<slot />
			
		</div>
		</div>
		<Footer/>
	</body>
</html>

<style>
	html{
		scroll-behavior: smooth;
		md:scroll-auto
	},
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>
