---
const {id, title} = Astro.props;
---
<dialog id=`${id}` class="modal">
    <div class="modal-box">
      <h3 class="text-lg font-bold">{title}</h3>
      <slot/>
      <div class="modal-action">
        <form method="dialog">
          <!-- if there is a button in form, it will close the modal -->
          <button class="btn">Fermer</button>
        </form>
      </div>
    </div>
</dialog>